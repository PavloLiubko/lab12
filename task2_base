#include <iostream>

using namespace std;

int main() {
	
	long X;
	int i = 1;
	long sum = X;

	cout << "Введіть кількість грошей, яку отримав чиновник як хабар за 1 місяць:";
	cin >> X;
	cout << endl;

	if (X > 150000) {
		cout << "Чиновник отримав забагато грошей, його викрили. \n Чиновника викрито, тому він не зміг купити собі авто.";
}
	else {
	while(sum < 1700000) {
		cout << "Введіть кількість грошей, яку чиновник отримав як хабар в наступному місяці:";
		cin >> X;
		cout << endl;
		if ( X > 150000 ) {
			cout << "Чиновник отримав забагато грошей, його викрили";
}
		else {
		sum += X;
		i += 1;	
}
}
	
	if (sum >= 1700000) {
		cout << "Чиновнику знадобилось " << i << " місяців, щоб накопити з хабарів на BMW 3";
}
 else {
		cout << "Чиновника викрито, тому він не зміг купити собі авто.";
}
}

	return 0;
}
