#include <iostream>
#include <string>

using namespace std;

int main() {
	int counter = 0;
	string number;
	cout << "Введіть якесь число:";
	cin >> number;

	for (int i = 0; i < number.length(); i++) {
	int number_int = static_cast<int>(number[i]);
	if (number_int % 2 == 0) {
		counter += 1;
}
}	

	cout << "Кількість парних цифр у нашому числі: " << counter;


	return 0; }
